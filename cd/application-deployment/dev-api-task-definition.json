{
  "family": "notification-api-task",
  "executionRoleArn": "arn:aws:iam::437518843863:role/notification-api-ecs-task-execution-role",
  "networkMode": "awsvpc",
  "containerDefintions": [
    {
      "name": "notification-api",
      "image": "{must-be-specified}",
      "cpu": 512,
      "memory": 1024,
      "networkMode": "awsvpc",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "notification-api-log-group",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "containerPort": 6011,
          "hostPort": 6011
        }
      ],
      "environment": [
        {
          "name": "NOTIFY_ENVIRONMENT",
          "value": "development"
        },
        {
          "name": "FLASK_APP",
          "value": "application.py"
        }
      ],
      "secrets": [
        {
          "name": "TWILIO_ACCOUNT_SID",
          "valueFrom": "arn:aws:ssm:us-east-2:437518843863:parameter/dev/notification-api/twilio/account-sid"
        },
        {
          "name": "TWILIO_AUTH_TOKEN",
          "valueFrom": "arn:aws:ssm:us-east-2:437518843863:parameter/dev/notification-api/twilio/auth-token"
        },
        {
          "name": "TWILIO_FROM_NUMBER",
          "valueFrom": "arn:aws:ssm:us-east-2:437518843863:parameter/dev/notification-api/twilio/from-number"
        },
        {
          "name": "SQLALCHEMY_DATABASE_URI",
          "valueFrom": "arn:aws:ssm:us-east-2:437518843863:parameter/dev/notification-api/database/uri"
        }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "tags": [
    {
      "key": "Stack",
      "value": "application-infrastructure"
    },
    {
      "key": "Environment",
      "value": "dev"
    },
    {
      "key": "Team",
      "value": "va-notify"
    },
    {
      "key": "ManagedBy",
      "value": "Terraform"
    }
  ]
}